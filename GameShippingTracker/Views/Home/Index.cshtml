@{
    ViewData["Title"] = "Game Shipping Tracker";
}

<div class="row">
    <div class="col-sm-12 col-md-6">
        <h4>Shippings:</h4>

        <ul id="shippingItemsList"></ul>

        <p id="shippingItemsMsg" class="mt-3"></p>
    </div>
    <div class="col-sm-12 col-md-6">
        <input type="text" id="shippingIdField" name="shippingId" placeholder="Enter Shipping ID"
               class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded mb-4" />
        <button class="bg-blue-500 px-4 py-2 rounded w-full hover:bg-blue-400" id="shippingSubmit">Search For Shipping</button>
    </div> 
</div>
