@{
    ViewData["Title"] = "Track Order";
    Layout = "~/Views/Home/layout.cshtml";
}

<main class="flex justify-center items-center h-[80vh]">
    <form method="post" asp-action="TrackOrder" asp-controller="Game"
          class="bg-gray-800 p-8 rounded-lg shadow-md w-full max-w-sm">

        <h2 class="text-xl font-semibold mb-6">Track Your Order</h2>
        
        @if (!string.IsNullOrEmpty(ViewBag.Error as string))
        {
            <div class="bg-red-600 text-white font-semibold px-4 py-2 mb-4 rounded">
                @ViewBag.Error
            </div>
        }

        <input type="number" name="shippingId" placeholder="Enter Shipping ID"
               class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded mb-4" />

        <button class="bg-blue-500 px-4 py-2 rounded w-full hover:bg-blue-400">Search</button>
    </form>
</main>